generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  aiPromptCount  Int      @default(0)


  @@map("users") // ðŸ‘ˆ This tells Prisma to use the existing users table
}

model Habit {
  id             String         @id @default(cuid())
  title          String
  createdAt      DateTime       @default(now())
  userId         String
  completions    Completion[]
}

model Completion {
  id             String         @id @default(cuid())
  date           DateTime
  habitId        String
  userId         String
  habit          Habit          @relation(fields: [habitId], references: [id])
}

model Subscription {
  id             String         @id @default(cuid())
  userId         String         @unique
  stripeId       String         @unique
  status         String
  plan           String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}